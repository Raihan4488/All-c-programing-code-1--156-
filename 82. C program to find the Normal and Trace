#include <stdio.h>
#include <math.h>

int main() {
    int r, c;

    // Input rows and columns
    printf("Enter number of rows: ");
    scanf("%d", &r);

    printf("Enter number of columns: ");
    scanf("%d", &c);

    int A[r][c];
    float normal = 0;
    int trace = 0;

    // Input matrix
    printf("Enter the elements of the matrix:\n");
    for (int i = 0; i < r; i++) {
        for (int j = 0; j < c; j++) {
            scanf("%d", &A[i][j]);
        }
    }

    // Calculate normal and trace
    for (int i = 0; i < r; i++) {
        for (int j = 0; j < c; j++) {

            // Normal = sqrt(sum of squares)
            normal += A[i][j] * A[i][j];

            // Trace only if square matrix and diagonal
            if (i == j)
                trace += A[i][j];
        }
    }

    normal = sqrt(normal);

    // Output results
    printf("\nTrace of the matrix = %d\n", trace);
    printf("Normal of the matrix = %.2f\n", normal);

    return 0;
}
