#include <stdio.h>

int main() {
    FILE *src, *dest;
    char source[50], target[50];
    int ch;

    printf("Enter source file name: ");
    scanf("%s", source);

    printf("Enter destination file name: ");
    scanf("%s", target);

    src = fopen(source, "r");
    dest = fopen(target, "w");   // write mode (overwrites)

    if (!src || !dest) {
        printf("Error: Could not open files.\n");
        return 1;
    }

    while ((ch = fgetc(src)) != EOF) {
        fputc(ch, dest);
    }

    printf("File copied successfully.\n");

    fclose(src);
    fclose(dest);
    return 0;
}
