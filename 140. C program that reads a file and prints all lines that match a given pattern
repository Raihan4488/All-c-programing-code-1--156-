#include <stdio.h>
#include <string.h>

int main() {
    FILE *fp;
    char filename[50], pattern[50], line[200];

    printf("Enter file name: ");
    scanf("%s", filename);

    printf("Enter pattern to search: ");
    scanf("%s", pattern);

    fp = fopen(filename, "r");
    if (!fp) {
        printf("Error: Cannot open file.\n");
        return 1;
    }

    printf("\nLines matching '%s':\n", pattern);

    while (fgets(line, sizeof(line), fp)) {
        if (strstr(line, pattern)) {   // check substring match
            printf("%s", line);
        }
    }

    fclose(fp);
    return 0;
}
