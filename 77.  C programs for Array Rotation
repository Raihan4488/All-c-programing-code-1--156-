#include <stdio.h>

int main() {
    int n, k;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    int arr[n];

    printf("Enter %d elements:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter number of rotations (k): ");
    scanf("%d", &k);

    k = k % n;  // handle large k

    // Temporary array
    int temp[k];

    // Store first k elements
    for (int i = 0; i < k; i++) {
        temp[i] = arr[i];
    }

    // Shift remaining elements left
    for (int i = 0; i < n - k; i++) {
        arr[i] = arr[i + k];
    }

    // Put stored elements at the end
    for (int i = 0; i < k; i++) {
        arr[n - k + i] = temp[i];
    }

    // Display result
    printf("Array after left rotation:\n");
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}
