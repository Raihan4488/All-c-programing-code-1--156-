#include <stdio.h>

// Define structure for distance
struct Distance {
    int feet;
    int inch;
};

int main() {
    int n;
    printf("Enter the number of distances: ");
    scanf("%d", &n);

    struct Distance d[n], sum = {0, 0};

    // Input distances
    for (int i = 0; i < n; i++) {
        printf("Enter distance %d (feet and inches): ", i + 1);
        scanf("%d %d", &d[i].feet, &d[i].inch);
    }

    // Add distances
    for (int i = 0; i < n; i++) {
        sum.feet += d[i].feet;
        sum.inch += d[i].inch;

        // Convert inches to feet if >= 12
        if (sum.inch >= 12) {
            sum.feet += sum.inch / 12;
            sum.inch = sum.inch % 12;
        }
    }

    printf("\nTotal Distance: %d feet %d inches\n", sum.feet, sum.inch);

    return 0;
}
