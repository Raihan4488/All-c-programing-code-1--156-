#include <stdio.h>

int main() {
    char oldName[50], newName[50];

    printf("Enter current file name: ");
    scanf("%s", oldName);

    printf("Enter new file name: ");
    scanf("%s", newName);

    if (rename(oldName, newName) == 0)
        printf("File renamed successfully.\n");
    else
        printf("Error: unable to rename the file.\n");

    return 0;
}
