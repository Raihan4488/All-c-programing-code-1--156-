#include <stdio.h>

int main() {
    FILE *f1, *f2;
    char file1[50], file2[50];
    int ch1, ch2, pos = 1, mismatch = 0;

    printf("Enter first file name: ");
    scanf("%s", file1);

    printf("Enter second file name: ");
    scanf("%s", file2);

    f1 = fopen(file1, "r");
    f2 = fopen(file2, "r");

    if (!f1 || !f2) {
        printf("Error: Could not open files.\n");
        return 1;
    }

    while (1) {
        ch1 = fgetc(f1);
        ch2 = fgetc(f2);

        if (ch1 == EOF && ch2 == EOF)
            break;

        if (ch1 != ch2) {
            printf("Mismatch at position %d: '%c' vs '%c'\n",
                   pos,
                   (ch1 == EOF ? '-' : ch1),
                   (ch2 == EOF ? '-' : ch2));
            mismatch = 1;
        }

        pos++;
    }

    if (!mismatch)
        printf("Files are identical.\n");

    fclose(f1);
    fclose(f2);
    return 0;
}
