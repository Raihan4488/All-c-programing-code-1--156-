#include <stdio.h>

struct Student {
    int id;
    int age;
    char name[50];
};

int main() {
    struct Student s;

    // Take user input
    printf("Enter Student ID: ");
    scanf("%d", &s.id);

    printf("Enter Age: ");
    scanf("%d", &s.age);

    printf("Enter Name: ");
    scanf("%s", s.name);

    // Open file in binary write mode
    FILE *fp = fopen("student.dat", "wb");
    if (fp == NULL) {
        printf("Error opening file!\n");
        return 1;
    }

    // Write structure to file
    fwrite(&s, sizeof(struct Student), 1, fp);

    printf("\nRecord written to file successfully!\n");

    fclose(fp);
    return 0;
}
