#include <stdio.h>

int main() {
    int n, element;

    printf("Enter number of elements in the array: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter %d elements:\n", n);
    for (int i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    printf("Enter the element to remove: ");
    scanf("%d", &element);

    int newSize = 0;  // Index for the new array without the element

    for (int i = 0; i < n; i++) {
        if (arr[i] != element) {
            arr[newSize++] = arr[i];  // Copy only elements that are not equal to 'element'
        }
    }

    printf("Array after removing all occurrences of %d:\n", element);
    for (int i = 0; i < newSize; i++)
        printf("%d ", arr[i]);
    printf("\n");

    return 0;
}
