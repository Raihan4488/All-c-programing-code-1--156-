#include <stdio.h>
#include <time.h>

int main() {
    time_t now;
    struct tm *localTime, *gmtTime;

    // Get current time
    now = time(NULL);

    // Convert to local time
    localTime = localtime(&now);

    // Convert to GMT / UTC
    gmtTime = gmtime(&now);

    printf("Local Time: %04d-%02d-%02d %02d:%02d:%02d\n",
           localTime->tm_year + 1900,
           localTime->tm_mon + 1,
           localTime->tm_mday,
           localTime->tm_hour,
           localTime->tm_min,
           localTime->tm_sec);

    printf("GMT Time:   %04d-%02d-%02d %02d:%02d:%02d\n",
           gmtTime->tm_year + 1900,
           gmtTime->tm_mon + 1,
           gmtTime->tm_mday,
           gmtTime->tm_hour,
           gmtTime->tm_min,
           gmtTime->tm_sec);

    return 0;
}
