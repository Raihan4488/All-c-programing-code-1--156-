#include <stdio.h>
#include <string.h>

int main() {
    char str[100], *ptr;

    printf("Enter a numeric string: ");
    fgets(str, sizeof(str), stdin);
    str[strcspn(str, "\n")] = '\0'; // Remove newline

    // Find first non-zero character
    ptr = str;
    while (*ptr == '0' && *(ptr + 1) != '\0') {
        ptr++;
    }

    printf("String after removing leading zeros: %s\n", ptr);

    return 0;
}
