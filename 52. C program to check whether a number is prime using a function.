#include <stdio.h>

// Function to check prime
int isPrime(int n) {
    if (n <= 1)
        return 0;   // Not prime

    for (int i = 2; i * i <= n; i++) {
        if (n % i == 0)
            return 0;   // Not prime
    }
    return 1;   // Prime
}

int main() {
    int num;

    printf("Enter a number: ");
    scanf("%d", &num);

    if (isPrime(num))
        printf("%d is a Prime Number.\n", num);
    else
        printf("%d is Not a Prime Number.\n", num);

    return 0;
}
