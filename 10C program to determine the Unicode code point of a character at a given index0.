#include <stdio.h>
#include <string.h>

int main() {
    char str[200];
    int index;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);
    str[strcspn(str, "\n")] = '\0'; // Remove newline

    int len = strlen(str);

    printf("Enter the index (0 to %d): ", len - 1);
    scanf("%d", &index);

    if (index < 0 || index >= len) {
        printf("Invalid index!\n");
        return 0;
    }

    // Print character and its code point
    printf("Character at index %d: '%c'\n", index, str[index]);
    printf("Unicode code point (ASCII) = %d\n", (unsigned char)str[index]);

    return 0;
}
