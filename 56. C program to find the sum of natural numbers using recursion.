#include <stdio.h>

// Recursive function to find sum
int sum(int n) {
    if (n == 0)
        return 0;       // Base case
    else
        return n + sum(n - 1);   // Recursive call
}

int main() {
    int n;

    printf("Enter a positive number: ");
    scanf("%d", &n);

    printf("Sum of first %d natural numbers = %d\n", n, sum(n));

    return 0;
}
