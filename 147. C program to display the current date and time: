#include <stdio.h>
#include <time.h>

int main() {
    time_t now;
    struct tm *t;

    // Get current time
    now = time(NULL);
    t = localtime(&now);

    // Display date and time in YYYY-MM-DD HH:MM:SS format
    printf("Current Date & Time: %04d-%02d-%02d %02d:%02d:%02d\n",
           t->tm_year + 1900,
           t->tm_mon + 1,
           t->tm_mday,
           t->tm_hour,
           t->tm_min,
           t->tm_sec);

    return 0;
}
