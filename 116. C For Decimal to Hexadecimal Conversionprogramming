#include <stdio.h>

int main() {
    int decimal;

    printf("Enter a decimal number: ");
    scanf("%d", &decimal);

    // Print as hexadecimal using %X or %x
    printf("Decimal %d as hexadecimal (uppercase): %X\n", decimal, decimal);
    printf("Decimal %d as hexadecimal (lowercase): %x\n", decimal, decimal);

    return 0;
}
