#include <stdio.h>

int main() {
    int n;

    printf("Enter the number of elements in the array: ");
    scanf("%d", &n);

    int arr[n];
    int *ptr = arr;

    printf("Enter %d elements:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", ptr + i); // Using pointer arithmetic
    }

    // Initialize largest with first element
    int largest = *ptr;

    // Find largest element using pointer
    for (int i = 1; i < n; i++) {
        if (*(ptr + i) > largest) {
            largest = *(ptr + i);
        }
    }

    printf("The largest element in the array is: %d\n", largest);

    return 0;
}
