#include <stdio.h>

// Function to calculate factorial
int factorial(int n) {
    int fact = 1, i;
    for (i = 1; i <= n; i++)
        fact *= i;
    return fact;
}

// Function to calculate nCr
int nCr(int n, int r) {
    return factorial(n) / (factorial(r) * factorial(n - r));
}

int main() {
    int rows, i, j;

    printf("Enter the number of rows: ");
    scanf("%d", &rows);

    for (i = 0; i < rows; i++) {
        // Print leading spaces
        for (j = 0; j < rows - i - 1; j++) {
            printf("  ");
        }

        // Print values of Pascal's Triangle
        for (j = 0; j <= i; j++) {
            printf("%4d", nCr(i, j));
        }

        printf("\n");
    }

    return 0;
}
