#include <stdio.h>
#include <time.h>

int main() {
    time_t t;
    struct tm *tm_info;

    // get current time
    time(&t);
    tm_info = localtime(&t);

    int day = tm_info->tm_mday;
    int month = tm_info->tm_mon + 1; // months 0-11
    int year = tm_info->tm_year + 1900;

    // Format 1: DD-MM-YYYY
    printf("Date (DD-MM-YYYY): %02d-%02d-%04d\n", day, month, year);

    // Format 2: MM/DD/YYYY
    printf("Date (MM/DD/YYYY): %02d/%02d/%04d\n", month, day, year);

    // Format 3: YYYY.MM.DD
    printf("Date (YYYY.MM.DD): %04d.%02d.%02d\n", year, month, day);

    // Format 4: Day Month_Name, Year
    char *months[] = {"January", "February", "March", "April", "May", "June",
                      "July", "August", "September", "October", "November", "December"};
    printf("Date (Day Month, Year): %02d %s, %04d\n", day, months[month - 1], year);

    return 0;
}
