#include <stdio.h>

// Recursive function to calculate power
double power(double base, int exponent) {
    if (exponent == 0)
        return 1;           // Base case: any number^0 = 1
    else if (exponent > 0)
        return base * power(base, exponent - 1);  // Positive exponent
    else
        return 1 / power(base, -exponent);       // Negative exponent
}

int main() {
    double base;
    int exponent;

    printf("Enter base: ");
    scanf("%lf", &base);

    printf("Enter exponent: ");
    scanf("%d", &exponent);

    printf("%.2lf ^ %d = %.2lf\n", base, exponent, power(base, exponent));

    return 0;
}
