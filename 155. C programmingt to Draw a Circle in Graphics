#include <graphics.h>
#include <conio.h>

int main() {
    int gd = DETECT, gm;

    // Initialize graphics mode
    initgraph(&gd, &gm, "C:\\TC\\BGI");

    // Draw a circle --> circle(x_center, y_center, radius)
    circle(300, 200, 100);

    getch();        // Wait for a key press
    closegraph();   // Close graphics mode
    return 0;
}
