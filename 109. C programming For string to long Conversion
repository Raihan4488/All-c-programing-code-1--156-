#include <stdio.h>
#include <stdlib.h>

int main() {
    char str[100];
    char *endptr;
    long num;

    printf("Enter a numeric string: ");
    fgets(str, sizeof(str), stdin);
    str[strcspn(str, "\n")] = '\0'; // Remove newline

    // Convert string to long
    num = strtol(str, &endptr, 10); // Base 10

    // Check if the conversion was successful
    if (*endptr != '\0') {
        printf("Invalid input! Not a valid long integer.\n");
    } else {
        printf("Converted long value: %ld\n", num);
    }

    return 0;
}
