#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char str[200];

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);
    str[strcspn(str, "\n")] = '\0'; // Remove newline

    int len = strlen(str);

    printf("First letters of each word: ");

    // Print first character if not space
    if (str[0] != ' ')
        printf("%c ", str[0]);

    // Traverse the string
    for (int i = 1; i < len; i++) {
        if (str[i - 1] == ' ' && str[i] != ' ') {
            printf("%c ", str[i]);
        }
    }

    printf("\n");

    return 0;
}
