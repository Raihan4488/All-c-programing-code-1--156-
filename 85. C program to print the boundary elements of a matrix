#include <stdio.h>

int main() {
    int r, c;

    // Input matrix size
    printf("Enter number of rows: ");
    scanf("%d", &r);

    printf("Enter number of columns: ");
    scanf("%d", &c);

    int A[r][c];

    // Input matrix elements
    printf("Enter matrix elements:\n");
    for (int i = 0; i < r; i++) {
        for (int j = 0; j < c; j++) {
            scanf("%d", &A[i][j]);
        }
    }

    // Print boundary elements
    printf("\nBoundary elements of the matrix:\n");

    for (int i = 0; i < r; i++) {
        for (int j = 0; j < c; j++) {

            // Check if element is on boundary
            if (i == 0 || i == r - 1 || j == 0 || j == c - 1)
                printf("%d ", A[i][j]);
            else
                printf("  ");  // print space for non-boundary
        }
        printf("\n");
    }

    return 0;
}
